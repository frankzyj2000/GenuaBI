@using GenuinaBI.Resources.Shared
@{
    /* This partial controls the control side bar of the GenuinaBI and is called automatically by _GenuinaBILayout
    This is where you can add, modify, or remove side bar configuation menu options in your app*/
    Layout = null;
}
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Create the tabs -->
            <ul class="nav nav-tabs nav-justified control-sidebar-tabs">
                <li><a href="#control-sidebar-home-tab" data-toggle="tab"><i class="fa fa-home"></i></a></li>
                <li><a href="#control-sidebar-settings-tab" data-toggle="tab"><i class="fa fa-gears"></i></a></li>
            </ul>
            <!-- Tab panes -->
            <div class="tab-content">
                <!-- Home tab content -->
                <div class="tab-pane active" id="control-sidebar-home-tab">
                    <form method="post">
                        <h4 class='control-sidebar-heading'>@UIConfigResources.UILayoutTitle</h4>
                        @*//Fixed layout
                        <div class='form-group'>
                            <label class='control-sidebar-subheading'>
                                <input type='checkbox' data-layout='fixed' class='pull-right' />@UIConfigResources.UILayoutFixed
                            </label>
                            <p>@UIConfigResources.UILayoutFixedInfo</p>
                        </div>*@
                        <!-- Boxed layout -->
                        <div class='form-group'>
                            <label class='control-sidebar-subheading'>
                                <input type='checkbox' data-layout='layout-boxed' class='pull-right' />@UIConfigResources.UILayoutBoxed
                            </label>
                            <p>@UIConfigResources.UILayoutBoxedInfo</p>
                        </div>
                        <!-- Sidebar Toggle -->
                        <div class='form-group'>
                            <label class='control-sidebar-subheading'>
                                <input type='checkbox' value='checked' data-layout='sidebar-collapse' class='pull-right' />@UIConfigResources.UILayoutToggleSidebar
                            </label>
                            <p>@UIConfigResources.UILayoutToggleSidebarInfo</p>
                        </div>
                         @*//Sidebar mini expand on hover toggle 
                        <div class='form-group'>
                            <label class='control-sidebar-subheading'>
                                <input type='checkbox' data-enable='expandOnHover' class='pull-right' />@UIConfigResources.UILayoutSidebarExpand
                            </label>
                            <p>@UIConfigResources.UILayoutSidebarExpandInfo</p>
                        </div>*@
                        <!-- Control Sidebar Toggle -->
                        <div class='form-group'>
                            <label class='control-sidebar-subheading'>
                                <input type='checkbox' data-controlsidebar='control-sidebar-open' class='pull-right' />@UIConfigResources.UILayoutToggleRightSidebar
                            </label>
                            <p>@UIConfigResources.UILayoutToggleRightSidebarInfo</p>
                        </div>
                        <!-- Control Sidebar Skin Toggle -->
                        <div class='form-group'>
                            <label class='control-sidebar-subheading'>
                                <input type='checkbox' data-sidebarskin='toggle' class='pull-right' />@UIConfigResources.UILayoutToggleRightSidebarSkin
                            </label>
                            <p>@UIConfigResources.UILayoutToggleRightSidebarSkin</p>
                        </div>
                    </form>
                </div>
